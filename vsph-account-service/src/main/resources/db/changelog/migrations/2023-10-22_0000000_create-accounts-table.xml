<databaseChangeLog
  xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.4.xsd">

  <property name="now" value="now()" dbms="mysql,h2"/>
  <property name="now" value="current_timestamp" dbms="postgresql"/>
  <property name="now" value="sysdate" dbms="oracle"/>

  <property name="keyType" value="bigint unsigned" dbms="mysql,h2"/>
  <property name="keyType" value="bigint" dbms="postgresql,oracle"/>

  <property name="floatType" value="float4" dbms="postgresql,h2"/>
  <property name="floatType" value="float" dbms="mysql,oracle"/>
  <property name="textType" value="text" dbms="mysql,postgresql"/>
  <property name="textType" value="varchar(1000000)" dbms="h2"/>

  <changeSet id="2023-10-22_0000000_create-accounts-table" author="milosz08" context="lq_dev, lq_docker">
    <createTable tableName="accounts">
      <column name="id" autoIncrement="true" type="${keyType}">
        <constraints nullable="false" primaryKey="true"/>
      </column>

      <column name="first_name" type="varchar(80)">
        <constraints nullable="false"/>
      </column>
      <column name="last_name" type="varchar(80)">
        <constraints nullable="false"/>
      </column>
      <column name="default_color" type="varchar(7)">
        <constraints nullable="false"/>
      </column>
      <column name="birth_date" type="date">
        <constraints nullable="false"/>
      </column>
      <column name="allow_notifs" type="boolean">
        <constraints nullable="false"/>
      </column>
      <column name="user_id" type="${keyType}">
        <constraints nullable="false"/>
      </column>

      <column name="created_at" type="timestamp">
        <constraints nullable="false"/>
      </column>
      <column name="updated_at" type="timestamp">
        <constraints nullable="false"/>
      </column>
    </createTable>
  </changeSet>
</databaseChangeLog>
