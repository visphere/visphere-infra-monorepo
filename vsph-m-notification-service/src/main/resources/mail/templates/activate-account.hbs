<mj-section padding="0">
  <mj-column>
    <mj-text align="center" font-size="20px" font-weight="800">
      [[vsph.i18n.mail.hello]] {{ username }}!
    </mj-text>
    <mj-text align="center" color="rgb(140,140,140)" font-size="15px">
      [[vsph.i18n.mail.activateAccount.paragraph1]]:
    </mj-text>
    <mj-button
      padding="20px 0"
      background-color="white"
      border="1px solid black"
      border-radius="10px"
      color="black"
      inner-padding="8px"
      width="40%"
      font-size="20px"
      font-weight="800">
      {{ token }}
    </mj-button>
    <mj-text color="rgb(140,140,140)" align="center" font-size="15px">
      [[vsph.i18n.mail.orElsePressButton]]:
    </mj-text>
    <mj-button
      padding="20px 0"
      border-radius="10px"
      inner-padding="8px 30px"
      font-size="15px"
      href="{{ infraGatewayUrl }}/api/v1/auth/account/activate/{{ token }}/redirect"
      background-color="black">
      [[vsph.i18n.mail.activateAccount.activateButton]]
    </mj-button>
    <mj-text color="rgb(140,140,140)" font-size="15px" align="center">
      [[vsph.i18n.mail.tokenLife]] <span style="color: black; font-weight: 600">
        {{ tokenLife }} [[vsph.i18n.mail.hours]]</span>. [[vsph.i18n.mail.activateAccount.paragraph2]].
    </mj-text>
  </mj-column>
</mj-section>
