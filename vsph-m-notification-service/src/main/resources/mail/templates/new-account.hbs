<mj-section padding="0">
  <mj-column>
    <mj-image
      width="80px"
      border-radius="20%"
      src="$${profileImagePlaceholder}$$"/>
    <mj-text align="center" font-size="20px" font-weight="bold">
      [[vsph.i18n.mail.hello]] {{ username }}!
    </mj-text>
    <mj-text align="center" color="hsl(210, 12%, 50%)" font-size="15px">
      [[vsph.i18n.mail.newAccount.paragraph1]]:
      <span style="color: black; font-weight: 600">{{ nickname }}</span>
      [[vsph.i18n.mail.newAccount.paragraph2]]:
      <a style="color: black" href="{{ profileEditLink }}">[[vsph.i18n.mail.belowThisAddress]]</a>.
      [[vsph.i18n.mail.newAccount.paragraph3]]:
    </mj-text>
    <mj-button
      padding="20px 0"
      border-radius="10px"
      inner-padding="8px 30px"
      font-size="15px"
      href="{{ createGuildLink }}"
      background-color="black">
      [[vsph.i18n.mail.newAccount.createGuildButton]]
    </mj-button>
    <mj-text color="hsl(210, 12%, 50%)" align="center" font-size="15px" padding="0">
      [[vsph.i18n.mail.or]]:
    </mj-text>
    <mj-button
      padding="20px 0"
      border-radius="10px"
      inner-padding="8px 30px"
      font-size="15px"
      href="{{ landingUrl }}/public-spheres"
      background-color="transparent"
      border="1px solid black"
      color="black">
      [[vsph.i18n.mail.newAccount.joinToPublicGuildButton]]
    </mj-button>
    <mj-image width="40px" src="{{ s3StaticUrl }}/static/icon/bulb.svg"/>
    <mj-text color="black" align="center" font-size="15px" padding-bottom="0">
      [[vsph.i18n.mail.newAccount.whatIsSphere]]?
    </mj-text>
    <mj-text color="hsl(210, 12%, 50%)" align="center" font-size="15px">
      [[vsph.i18n.mail.newAccount.shpereExplanation]]
      <a style="color: black" href="{{ landingUrl }}/about">[[vsph.i18n.mail.belowThisAddress]]</a>.
    </mj-text>
  </mj-column>
</mj-section>
